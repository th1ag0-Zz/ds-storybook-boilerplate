{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "importHelpers": true,
    "noEmit": true,
    "baseUrl": "."
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "storybook-static"
  ],
  "include": ["src", "**/*.cjs"]
}
