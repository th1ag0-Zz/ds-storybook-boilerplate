{
  "name": "ds-storybook-boilerplate",
  "version": "1.0.0",
  "author": "@change_me",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "update-version-to-date": "node packageVersionHelper.js to-number",
    "update-version-to-string": "node packageVersionHelper.js to-string",
    "test-storybook": "test-storybook --url http://127.0.0.1:6006",
    "auto-tests": "npm run update-version-to-date && npm run test-storybook && npm run update-version-to-string",
    "build": "npm run build-tailwind-css && rollup -c",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build ./src",
    "docker-build": "docker build . -t ds-storybook-boilerplate",
    "docker-run": "docker run -p 8080:8080 ds-storybook-boilerplate",
    "prepare": "husky",
    "build-tailwind-css": "npx tailwindcss -i ./src/tailwind.css -o ./src/output.css",
    "build:types": "tsc -p tsconfig.build.json",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@chromatic-com/storybook": "^4.1.3",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^10.0.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "storybook": "^10.0.8",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
