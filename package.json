{
  "name": "ds-storybook-boilerplate",
  "version": "1.0.0",
  "author": "@change_me",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "update-version-to-date": "node ./scripts/package-version-helper.js to-number",
    "update-version-to-string": "node ./scripts/package-version-helper.js to-string",
    "auto-tests": "npm run update-version-to-date && npm run test-storybook && npm run update-version-to-string",
    "update:icon": "node src/components/Icon/generateIconType.js",
    "generate-exports-files": "node ./scripts/generate-exports.js",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "npm run build-tailwind-css && npm run generate-exports-files && rollup -c",
    "storybook": "storybook dev -p 6006",
    "storybook-old": "concurrently \"npm run build-tailwind-css:watch\" \"storybook dev -p 6006 ./src\"",
    "update:illustration": "node src/components/Illustration/generateIllustrationType.js",
    "build-storybook": "storybook build ./src",
    "docker-build": "docker build . -t azul-storybook",
    "docker-run": "docker run -p 8080:8080 azul-storybook",
    "prepare": "husky",
    "build-tailwind-css": "npx tailwindcss -i ./src/tailwind.css -o ./src/output.css",
    "build-tailwind-css:watch": "npx tailwindcss -i ./src/tailwind.css -o ./src/output.css --watch",
    "generate-component": "plop --plopfile ./generators/plopfile.js",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "polished": "^4.3.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@chromatic-com/storybook": "^4.1.3",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^10.0.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "plop": "^4.0.4",
    "storybook": "^10.0.8",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
